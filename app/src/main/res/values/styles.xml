<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <!--        <item name="android:typeface">serif</item>-->
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="MyAlertDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <!-- Used for the buttons -->
        <item name="colorAccent">#FFFFFF</item>
        <!-- Used for the title and text -->
        <item name="android:textColorPrimary">#FFFFFF</item>
        <!-- Used for the background -->
        <item name="android:background">@color/colorPrimary</item>
    </style>

    //NavigationView

    <style name="navigationView">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_gravity">start</item>
        <item name="android:fitsSystemWindows">true</item>
    </style>
    //navigation theme style

    <style name="navigation_theme">
        <item name="android:textSize">18sp</item><!-- text size in menu-->
    </style>
    //AppBarLayout

    <style name="appBarLayout">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:theme">@style/AppTheme.AppBarOverlay</item>
    </style>
    //toolbar

    <style name="toolBar">
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">?attr/colorPrimary</item>
    </style>
    //editText

    <style name="editText">
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_marginStart">64dp</item>
        <item name="android:layout_marginEnd">64dp</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:drawablePadding">5dp</item>
        <item name="android:background">@drawable/shadow_background</item>
    </style>

    <style name="textInputLayoutTheme" parent="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:layout_marginTop">10dp</item>
    </style>

    <style name="textInputEditTextTheme">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:inputType">textPassword</item>
    </style>
    //textView

    <style name="textView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="transaction_text_view">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">2dp</item>
        <item name="android:textColor">@color/md_grey_800</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="pre_top_up_text_view">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:layout_marginEnd">8dp</item>
        <item name="android:textSize">17sp</item>
        <item name="android:layout_marginTop">10dp</item>
    </style>
    //button

    <style name="button">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">24dp</item>
        <item name="android:layout_marginStart">64dp</item>
        <item name="android:layout_marginEnd">64dp</item>
        <item name="android:textColor">@color/md_white_1000</item>
        <item name="android:background">@drawable/button_background</item>
    </style>
    //button continue style

    <style name="button_continue">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginStart">30dp</item>
        <item name="android:layout_marginEnd">30dp</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/md_white_1000</item>
        <item name="android:background">@drawable/button_background</item>
    </style>

    //search button style

    <style name="search_button_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/md_white_1000</item>
        <item name="android:background">@drawable/button_background</item>
    </style>

    //date button

    <style name="date_button_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/md_white_1000</item>
        <item name="android:background">@drawable/button_background</item>
        <item name="android:padding">5dp</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:drawableStart">@drawable/ic_date_range</item>
        <item name="android:layout_weight">1</item>
    </style>

    //top up button

    <style name="top_up_button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:textColor">@color/text_color_chip_state_list</item>
        <item name="android:background">@color/bg_chip_state_list</item>
        <item name="android:padding">30dp</item>
    </style>
    //chip

    <style name="chip" parent="@style/Widget.MaterialComponents.Chip.Choice">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:clickable">true</item>
        <item name="android:checkable">true</item>
        <item name="chipBackgroundColor">@color/bg_chip_state_list</item>
        <item name="android:textColor">@color/text_color_chip_state_list</item>
        <item name="rippleColor">@color/md_orange_200</item>
    </style>
    //radio

    <style name="radio">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
    </style>
    //top up amount button style

    <style name="top_up_amount_button_style">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">80dp</item>
        <item name="android:layout_margin">16dp</item>
        <item name="android:textColor">@color/md_white_1000</item>
        <item name="android:background">@drawable/bg_selector</item>
        <item name="android:layout_weight">1</item>
    </style>
    //Loading

    <style name="CustomProgressBarTheme">
        <item name="android:windowLightStatusBar" tools:targetApi="m">false</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

</resources>
